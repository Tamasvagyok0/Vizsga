<Window x:Class="Kalapacsvetes.WPF.UjAdatAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalapacsvetes.WPF"
        mc:Ignorable="d"
        Title="Új sportoló hozzáadása" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f0f0">
    <Border CornerRadius="15" BorderThickness="2" BorderBrush="Gray" Background="White" Padding="15" Margin="10">
        <StackPanel>

            <TextBlock Text="Név:" FontWeight="Bold"/>
            <TextBox x:Name="NevBox"/>

            <TextBlock Text="Országkód:" Margin="0,10,0,0" FontWeight="Bold"/>
            <TextBox x:Name="OrszagkodBox"/>

            <TextBlock Text="Helyszín:" Margin="0,10,0,0" FontWeight="Bold"/>
            <TextBox x:Name="HelyszinBox"/>

            <TextBlock Text="Dátum:" Margin="0,10,0,0" FontWeight="Bold"/>
            <DatePicker x:Name="DatumPicker" SelectedDateFormat="Short"/>

            <TextBlock Text="Eredmény (m):" Margin="0,10,0,0" FontWeight="Bold"/>
            <TextBox x:Name="EredmenyBox"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Mégsem" Width="100" Margin="0,0,10,0" Click="Megsem_Click"/>
                <Button Content="Mentés" Width="100" Click="Mentes_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
